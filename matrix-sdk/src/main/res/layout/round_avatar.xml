<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/chat_avatar_size"
    android:layout_height="@dimen/chat_avatar_size">

    <ImageView
        android:id="@+id/avatar_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/avatar_mask"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/imageView_presenceRing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/presence_ring"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/avatar_typing_img"
        android:layout_width="@dimen/chat_avatar_keyboard_size"
        android:layout_height="@dimen/chat_avatar_keyboard_size"
        android:src="@drawable/icon_keyboard"
        android:visibility="gone"
        tools:ignore="ContentDescription"/>

</FrameLayout>